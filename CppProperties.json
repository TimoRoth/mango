{
  "configurations": [
    {
      "inheritEnvironments": [ "msvc_x86" ],
      "name": "x86-Debug",
      "environments": [
        {
          "Platform": "x86",
          "Configuration": "Debug",
          "CC": "clang.exe",
          "CFLAGS": "-target i686-pc-windows-msvc -g -D_DEBUG"
        }
      ],
      "includePath": [
        "${env.INCLUDE}"
      ],
      "defines": [
        "_DEBUG",
        "MANGO_EXPORTS"
      ],
      "intelliSenseMode": "windows-msvc-x86"
    },
    {
      "inheritEnvironments": [ "msvc_x86" ],
      "name": "x86-Release",
      "environments": [
        {
          "Platform": "x86",
          "Configuration": "Release",
          "CC": "clang.exe",
          "CFLAGS": "-target i686-pc-windows-msvc -O3 -DNDEBUG"
        }
      ],
      "includePath": [
        "${env.INCLUDE}"
      ],
      "defines": [
        "NDEBUG",
        "MANGO_EXPORTS"
      ],
      "intelliSenseMode": "windows-msvc-x86"
    },
    {
      "inheritEnvironments": [ "msvc_x64" ],
      "name": "x64-Debug",
      "environments": [
        {
          "Platform": "x64",
          "Configuration": "Debug",
          "CC": "clang.exe",
          "CFLAGS": "-target x86_64-pc-windows-msvc -g -D_DEBUG"
        }
      ],
      "includePath": [
        "${env.INCLUDE}"
      ],
      "defines": [
        "_DEBUG",
        "MANGO_EXPORTS"
      ],
      "intelliSenseMode": "windows-msvc-x64"
    },
    {
      "inheritEnvironments": [ "msvc_x64" ],
      "name": "x64-Release",
      "environments": [
        {
          "Platform": "x64",
          "Configuration": "Release",
          "CC": "clang.exe",
          "CFLAGS": "-target x86_64-pc-windows-msvc -O3 -DNDEBUG"
        }
      ],
      "includePath": [
        "${env.INCLUDE}"
      ],
      "defines": [
        "NDEBUG",
        "MANGO_EXPORTS"
      ],
      "intelliSenseMode": "windows-msvc-x64"
    }
  ]
}